@model AuthoringTagHelpers.Data.Article

<div class='card' style='max-width:700px;max-height:250px'>
    <div class='card-body'>
        <div style='display: inline;'>
            <div class='svg-icon' style='display: inline;'> <img src='static/icons/cond-mat.mes-hall_nanotechnology.svg'></div>
            <div style='display: inline;'><h5 class='card-title'>@(Model.Title)</h5></div>
        </div>
        <div class='card-text'>@(Model.AbstractText)</div>
        <p class='font-italic'>@(Model.Comments)</p>
        <a href='@(Model.PdfUrl)' class='card-link'>PDF</a>
    </div>
</div>